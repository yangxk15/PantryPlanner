<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context="edu.dartmouth.cs.pantryplanner.app.controller.PantryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="1dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton_pantry_edit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/edit3"
                android:background="#00000000"
                android:layout_alignParentRight="true"/>

            <ImageButton
                android:id="@+id/imageButton_pantry_complete"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/complete"
                android:background="#00000000"
                android:layout_alignParentLeft="true"
                android:visibility="gone"/>

            <!--SearchView
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:queryBackground="@android:color/white"
                android:queryHint="item"
                android:layout_weight="7" /-->

            <ImageButton
                android:id="@+id/imageButton_pantry_delete"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/delete"
                android:layout_centerInParent="true"
                android:background="#00000000"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/imageButton_pantry_cancel"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/cancel"
                android:background="#00000000"
                android:layout_alignParentRight="true"
                android:visibility="gone"/>

        </RelativeLayout>

        <ListView
            android:id="@+id/listView_pantry_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </ListView>

    </LinearLayout>


</FrameLayout>
