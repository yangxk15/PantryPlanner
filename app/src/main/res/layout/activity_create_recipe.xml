<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/my_create_recipe_layout">

    <TextView
        android:id="@+id/create_recipe_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipe Name: "/>

    <EditText
        android:id="@+id/create_recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/add_ingredient"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="add"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/create_recipe_steps_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="steps:"/>

    <EditText
        android:id="@+id/create_recipe_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/create_recipe_save"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Save"
            android:textStyle="bold" />

        <Button
            android:id="@+id/create_recipe_cancel"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Cancel"
            android:textStyle="bold" />
    </LinearLayout>



</LinearLayout>