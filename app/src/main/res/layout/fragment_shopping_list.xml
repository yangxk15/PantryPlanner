<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="edu.dartmouth.cs.pantryplanner.pantryplanner.ShoppingListFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/category_beef"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/food_category_meat"
                        android:layout_marginTop="3dp"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:textStyle="bold"
                        android:textSize="27sp"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <CheckBox
                    android:id="@+id/beef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/example_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="Beef"
                    android:textSize="20sp"
                    android:layout_weight="12.82" />

                <me.himanshusoni.quantityview.QuantityView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/quantityView_beaf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:qv_quantity="2" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/ground_pork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/example_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="Ground Pork"
                    android:textSize="20sp"
                    android:layout_weight="12.82" />

                <me.himanshusoni.quantityview.QuantityView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/quantityView_ground_pork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:qv_quantity="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chicken_wings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/example_3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="Chicken Wings"
                    android:textSize="20sp"
                    android:layout_weight="12.82" />

                <me.himanshusoni.quantityview.QuantityView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/quantityView_chicken_wings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:qv_quantity="1" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/category_diary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginTop="3dp"
                        android:layout_alignParentLeft="true"
                        android:text="@string/food_category_diary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:textStyle="bold"
                        android:textSize="27sp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/soy_milk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/example_4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="Soy Milk"
                    android:textSize="20sp"
                    android:layout_weight="12.82" />

                <me.himanshusoni.quantityview.QuantityView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/quantityView_soy_milk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:qv_quantity="2" />

            </LinearLayout>

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/category_fruit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/food_category_fruit"
                    android:layout_marginTop="3dp"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:textSize="27sp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/stawberry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/example_5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="Strawberry"
                    android:textSize="20sp"
                    android:layout_weight="12.82" />

                <me.himanshusoni.quantityview.QuantityView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/quantityView_strawberry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:qv_quantity="1" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/category_vegetable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/food_category_vegetable"
                    android:layout_marginTop="3dp"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:textSize="27sp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/green_pepper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/example_6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="Green Pepper"
                    android:textSize="20sp"
                    android:layout_weight="12.82" />

                <me.himanshusoni.quantityview.QuantityView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/quantityView_green_pepper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:qv_quantity="3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/potato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/example_7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="Potato"
                    android:textSize="20sp"
                    android:layout_weight="12.82" />

                <me.himanshusoni.quantityview.QuantityView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/quantityView_potato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:qv_quantity="5" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/category_ingredient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/food_category_ingredient"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:textSize="27sp"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/category_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/food_category_other"
                    android:textSize="20sp"
                    android:layout_marginTop="3dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:textSize="27sp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cholocote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/example_8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="Chocolate"
                    android:textSize="20sp"
                    android:layout_weight="12.82" />

                <me.himanshusoni.quantityview.QuantityView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/quantityView_chocoloate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:qv_quantity="1" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</FrameLayout>
