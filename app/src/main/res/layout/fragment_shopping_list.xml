<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="edu.dartmouth.cs.pantryplanner.app.controller.ShoppingListFragment"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_fragment_shopping_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="5dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="540dp">

    <ExpandableListView
        android:id="@+id/expandableListView_shopping_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="8"/>
</LinearLayout>

    <Button
        android:id="@+id/complete_shopping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Complete"
        android:background="@color/button"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
