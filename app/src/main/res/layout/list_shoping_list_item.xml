<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="center">

    <CheckBox
        android:id="@+id/checkBox_shop_item_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/textView_shop_item"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:typeface="serif"
        android:layout_weight="6"
        android:textSize="15dp"/>

    <me.himanshusoni.quantityview.QuantityView
        android:id="@+id/quantityView_shop_beaf"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:qv_quantity="2"
        app:qv_maxQuantity="30"
        app:qv_minQuantity="1"
        android:layout_gravity="center"
        android:layout_weight="7"
        app:qv_quantityDialog="false"/>

    <TextView
        android:id="@+id/textView_shop_item_unit"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="Unit"
        android:layout_marginRight="15dp"
        android:layout_weight="1"/>

</LinearLayout>
